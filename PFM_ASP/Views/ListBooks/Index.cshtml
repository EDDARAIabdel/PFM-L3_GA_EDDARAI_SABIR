@model IEnumerable<PFM_ASP.Models.Categories>
@{
    ViewBag.Title = "Index";
}
<style>
    body {
        background-image: url('../../images/fond-rose-violet-flou_103688-51.jpg');
        background-repeat: repeat-y;
        background-size: cover;
    }
    .dv {
        margin-top:80px;
        margin-bottom:60px;
    }
</style>
<div class="container dv">
    <br /><br />
    @foreach (var item in Model)
    {
          <div class="panel panel-default" style="padding:15px;">
              <h1 class="panel-heading">@Html.DisplayFor(modelItem => item.CategoryName)</h1>
              <h5>@Html.Raw(HttpUtility.HtmlDecode(@Html.DisplayFor(modelItem => item.CategoryDescription).ToString()))</h5>
              <div class="row D">
                  @foreach (var subitem in item.Books)
                  {
                      <div class="col-md-3 thumbnail" style="margin-left:20px;margin-bottom:30px;height:400px; padding-left:13px;overflow:scroll;">
                          <img src="~/Uploads/@subitem.BookImage" style="width:450px;height:250px;" />
                          <h3>@Html.DisplayFor(modelItem => subitem.BookTitle)</h3>
                          <h5>@Html.Raw(HttpUtility.HtmlDecode(@Html.DisplayFor(modelItem => subitem.BookDescription).ToString()))</h5>
                          <a href="@Html.DisplayFor(modelItem => subitem.BookUrl)" target="_blank"><button class="btn btn-default">Go to the Book</button></a>
                      </div>
                  }
              </div>
          </div>
    }
</div>