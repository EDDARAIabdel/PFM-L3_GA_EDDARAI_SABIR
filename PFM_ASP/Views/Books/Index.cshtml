@model IEnumerable<PFM_ASP.Models.Book>

@{
    ViewBag.Title = "Index";
}
<style>
    body {
        background-image: url('../../images/background.jpg');
        background-size: cover;
        background-repeat: repeat-y;
        min-height:800px;
    }

    .dv {
        margin-top: 140px;
        margin-bottom: 80px;
        background-color: white;
    }
</style>
<div class="container dv">
    <br /><br />
          <p>
              <button class="btn btn-default">@Html.ActionLink("Ajouter un livre", "Create")</button>
          </p>
    <table class="table table-stripped table-bordered table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookUrl)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookDescription)
                </td>
                <td>
                    <img src="~/Uploads/@Html.DisplayFor(model => item.BookImage)"
                         class="thumbnail" style="width:48px;height:48px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookUrl)
                </td>
                <td style="width:250px;">
                    @Html.ActionLink("Modifier", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Détails", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>